extends layout

block content

  h1= title
  -
    let results = [
      {
        "oven_Color": "Grey",
        "oven_Brand": "Phillips",
        "oven_Type": "Convention"
      },
      {
        "oven_Color": "Black",
        "oven_Brand": "LG",
        "oven_Type": "MicroWave"
      },
      {
        "oven_Color": "White",
        "oven_Brand": "GE",
        "oven_Type": "Toaster"
      },                   
    ]
  div(class= "container-fluid")
    div(class = "row")
      each item,index in results
        div(class= "col-sm-2" , onclick=`buy(${index})`) #{item.oven_Color}
        div(class= "col-sm-2", onclick=`buy(${index})`) #{item.oven_Brand}
        div(class= "col-sm-2", onclick=`buy(${index})`) #{item.oven_Type}

  script.
    function buy(itemNum){
      alert(`The purchased item is ${itemNum+1}`)
    }
