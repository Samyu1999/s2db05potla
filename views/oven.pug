block content
  h1= title

  - let items = results; 

  - let o;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
    } 
  div(class="container-fluid") 
    div(class="row m-1") 
      each item in items  
        - let destination = `dispatch(\"/oven/update?id=${item._id}\")` 
        - let destination1 = `dispatch(\"/oven/create\")` 
        - let destination2 = `dispatch(\"/oven/delete?id=${item._id}\")` 
        - let destination3 = `dispatch(\"/oven/detail?id=${item._id}\")` 
        div(class="row-sm-2" class="m-1") Item #{item.oven_color}(#{item.oven_brand}) is #{item.oven_price} 
          button.btn( class="btn-primary ml-1", onclick= destination) Update 
          button.btn( class="btn-primary ml-1", onclick= destination1) create 
          button.btn( class="btn-primary ml-1", onclick= destination2) delete 
          button.btn( class="btn-primary ml-1", onclick= destination3) detail 
script. 
  function dispatch(path){ 
    window.location.href=path 
  }