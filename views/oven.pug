extends layout

block content
  h1= title
  -
    let results = [
          {
             "Oven_Color": "Grey",
             "Oven_type": "Microwaveoven",
             "Oven_Size": 20
          },
          {
             "Oven_Color": "Grey",
             "Oven_type": "Convectionoven",
             "Oven_Size": 15
          },
          {
             "Oven_Color": "Black",
             "Oven_type": "toasteroven",
             "Oven_Size": 30
          },                   
      ]

  div(class= "container-fluid")
    div(class = "row")  
      each item, index in results
        div(class= "col-sm-2",  onclick=`buy(${index})`) #{item.Oven_Color}
        div(class= "col-sm-2",  onclick=`buy(${index})`) #{item.Oven_type}
        div(class= "col-sm-2",  onclick=`buy(${index})`) #{item.Oven_Size}
    
    script.
    function buy(itemNum){
      alert(`The purchased item is ${itemNum+1}`)
    }